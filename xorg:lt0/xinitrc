#!/bin/sh

([ -f ~/.Xresources ] && xrdb -merge -I$HOME ~/.Xresources) &
(. ~/.xrandr) &

dwmblocks &
xclock -digital -norender &

xbacklight -set 40 &
setxkbmap -option compose:rctrl
setxkbmap -option caps:ctrl_modifier &
#setxkbmap -option altwin:swap_alt_win
(xinput set-prop $(xinput | grep "TPPS/2 IBM TrackPoint" | cut -f2 | cut -d'=' -f2) "libinput Accel Speed" -0.6) &

# xbitmaps
#xsetroot -bitmap /usr/include/X11/bitmaps/dimple3 -fg "#000000" -bg "#FFFFFF"
#xsetroot -bitmap /usr/include/X11/bitmaps/cross_weave -fg "#999999" -bg "#008080" &
#xsetroot -bitmap /usr/include/X11/bitmaps/cross_weave -fg "#FFFFFF" -bg "#000000" &
xsetroot -bitmap /usr/include/X11/bitmaps/cross_weave -fg "#FFFFFF" -bg "#444444" &

wmname LG3D &
#exec dwm
exec ctwm
